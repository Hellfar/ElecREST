{
  "sample_values": {
    "dk_access_token": null,

    "dk_token_type": null,
    "dk_expires_in": null,
    "dk_refresh_token": null,

    "dk_resource_owner_id": null,
    "dk_expires_in_seconds": null
  },
  "sample_headers_key": {
    "Content-Type": "application/json",
    "Authorization": "Bearer #{dk_access_token}"
  },
  "routes": {
    "sign_in": {
      "method": "POST",
      "route": "/oauth/token",
      "request": {
        "headers": [
          "Content-Type"
        ],
        "body": "{\n\t\"grant_type\": \"password\",\n\t\"username\": #{username},\n\t\"password\": #{password},\n}"
      },
      "response": {
        "body": "{\n\t\"access_token\": \"#{dk_access_token}\",\n\t\"token_type\": \"#{dk_token_type}\",\n\t\"expires_in\": #{dk_expires_in},\n\t\"refresh_token\": \"#{dk_refresh_token}\",\n\t\"created_at\": #{}\n}"
      }
    },
    "sign_info": {
      "method": "GET",
      "route": "/oauth/token/info",
      "request": {
        "headers": [
          "Authorization"
        ]
      },
      "response": {
        "body": "{\n\t\"resource_owner_id\": \"#{dk_resource_owner_id}\",\n\t\"scopes\": #{},\n\t\"expires_in_seconds\": #{dk_expires_in_seconds},\n\t\"application\": #{},\n\t\"created_at\": #{}\n}"
      }
    },
    "sign_out": {
      "method": "GET",
      "route": "/oauth/revoke",
      "request": {
        "body": "{\n\t\"token\": \"#{dk_access_token}\"\n}"
      }
    }
  }
}
